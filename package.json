{
    "name": "nexusgui",
    "version": "0.1.0",
    "description": "通过 MCP 传递 GUI 定义，实现 AI 生成界面，桌面端渲染",
    "type": "commonjs",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "test": "jest",
        "sse-server": "node mcp-server-sse.js"
    },
    "keywords": [
        "electron",
        "mcp",
        "ai",
        "gui",
        "dynamic"
    ],
    "author": "NexusGUI Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "jest": "^29.7.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.4.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "node-fetch": "^3.3.2",
        "zod": "^3.22.4"
    },
    "build": {
        "appId": "com.nexusgui.app",
        "productName": "NexusGUI",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "renderer.js",
            "preload.js",
            "index.html",
            "styles.css",
            "mcp-server.mjs",
            "mcp-server-wrapper.js",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}