{
    "name": "nexusgui",
    "version": "0.1.0",
    "description": "通过 MCP 传递 GUI 定义，实现 AI 生成界面，桌面端渲染",
    "type": "commonjs",
    "main": "src/main/main.js",
    "scripts": {
        "start": "electron .",
        "start-with-window": "electron . --show-main-window",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "test": "jest"
    },
    "keywords": [
        "electron",
        "mcp",
        "ai",
        "gui",
        "dynamic"
    ],
    "author": "shadow",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.0.5"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.4.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "node-fetch": "^3.3.2",
        "zod": "^3.22.4"
    },
    "build": {
        "appId": "com.nexusgui.app",
        "productName": "NexusGUI",
        "asar": false,
        "directories": {
            "output": "dist"
        },
        "files": [
            "src/main/**/*",
            "src/config/settings.js",
            "src/renderer/renderer.js",
            "src/renderer/index.html",
            "src/renderer/styles.css",
            "src/i18n/**/*",
            "src/mcp/sse/server.js",
            "src/mcp/sse/wrapper.js",
            "src/mcp/sse/transport.js",
            "src/mcp/sse/tools/**/*",
            "src/mcp/sse/schemas/**/*",
            "src/mcp/sse/utils/**/*",
            "src/mcp/sse/validators/**/*",
            "src/mcp/sse/MIGRATION.md",
            "src/mcp/stdio/server.mjs",
            "src/mcp/stdio/wrapper.js",
            "assets/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "identity": null,
            "gatekeeperAssess": false,
            "hardenedRuntime": false
        }
    }
}